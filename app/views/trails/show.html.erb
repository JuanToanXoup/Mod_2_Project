<% if @trail.trail_pic.attached? %>
    <div style="width:500px;"> 
    <image src="<%=(url_for(@trail.trail_pic))%>" style="max-width:100%;" /> 
    </div>
<%end%>

<h1>Name: <%= @trail.name %></h1>
<ul>
<li>Location: <%= @trail.location %><br>
<li>Length: <%= @trail.length %><br>
<li>Duration: <%= @trail.duration %><br>
<li>Difficulty: <%= @trail.difficulty %><br>
<li>Trail Type: <%= @trail.trail_type %><br>
</ul>