<h1><%= form_for @ride do |f|%></h1>
    <br><%= f.label "Trail" %>
    <%= f.collection_select(:trail_id, Trail.all, :id, :name) %></br>
    <br><%= f.label :experience %>
    <%= f.text_field :experience %></br>
    <br><%= f.label :time %>
    <%= f.text_field :time %></br>
    <br><%= f.label :date %>
    <%= f.datetime_local_field :date%></br>
    
    <br><%= f.submit %>
<% end %>