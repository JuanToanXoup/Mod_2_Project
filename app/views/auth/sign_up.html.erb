<% if flash[:error] %>
    <h4 style="color: red;">
      Alert: <%= flash[:error] %>
    </h4>
<% end %>
<h1> Enter Your Information Here </h1>
<%= form_for @user do |f|%>
    <br><%= f.label "Full Name" %>
    <%= f.text_field :name %></br>
    <br><%= f.label :username %>
    <%= f.text_field :username %></br>
    <br><%= f.label "New Password" %>
    <%= f.text_field :password_digest %></br>
    <br><%= f.label :age %>
    <%= f.text_field :age %></br>
    <br><%= f.submit %></br>
<% end %>