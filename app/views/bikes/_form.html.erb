
<% if flash[:errors] %>
  <% flash[:errors].keys.each do |key| %>
    <h4 style="color: red;"> Error: <%= "#{key} #{flash[:errors][key][0]}" %> </h4>
  <% end %>
<% end %>
<%= form_for @bike do |f|%>
    <br><%= f.label :make %>
    <%= f.text_field :make, class: "form-control" %></br>
    <br><%= f.label :model %>
    <%= f.text_field :model, class: "form-control" %></br>
    <br><%= f.label :bike_type %>
    <%= f.text_field :bike_type, class: "form-control" %></br>
    <br><%= f.label :frame_size %>
    <%= f.text_field :frame_size, class: "form-control" %></br>
    
    <br><%= f.submit class: "btn btn-primary"%>
<% end %>