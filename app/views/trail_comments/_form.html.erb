<% if flash[:errors] %>
  <% flash[:errors].keys.each do |key| %>
    <h4 style="color: red;"> Error: <%= "#{key} #{flash[:errors][key][0]}" %> </h4>
  <% end %>
<% end %>

<% flash[:trail_id] = flash[:id] %>
<%= form_for @trail_comment do |f|%>
    
    
    <br><%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %></br>
    
    <br><%= f.submit class: "btn btn-primary" %>
<% end %>